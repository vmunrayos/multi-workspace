{
	"name": "frontend-angular2",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"prefix": "app",
	"sourceRoot": "apps/frontend-angular2/src",
	"tags": [],
	"targets": {
		"build": {
			"executor": "@angular/build:application",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/frontend-angular2",
				"browser": "apps/frontend-angular2/src/main.ts",
				"polyfills": ["zone.js"],
				"tsConfig": "apps/frontend-angular2/tsconfig.app.json",
				"assets": [
					{
						"glob": "**/*",
						"input": "apps/frontend-angular2/public"
					}
				],
				"styles": ["apps/frontend-angular2/src/styles.css"]
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "500kb",
							"maximumError": "1mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "4kb",
							"maximumError": "8kb"
						}
					],
					"outputHashing": "all",
					"fileReplacements": [
						{
							"replace": "apps/frontend-angular2/src/environments/environment.ts",
							"with": "apps/frontend-angular2/src/environments/environment.prod.ts"
						}
					]
				},
				"development": {
					"optimization": false,
					"extractLicenses": false,
					"sourceMap": true,
					"fileReplacements": []
				}
			},
			"defaultConfiguration": "production"
		},
		"serve": {
			"continuous": true,
			"executor": "@angular/build:dev-server",
			"configurations": {
				"production": {
					"buildTarget": "frontend-angular2:build:production"
				},
				"development": {
					"buildTarget": "frontend-angular2:build:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular/build:extract-i18n",
			"options": {
				"buildTarget": "frontend-angular2:build"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"outputs": [],
			"options": {
				"command": "bunx biome check apps/frontend-angular2"
			}
		},
		"serve-static": {
			"continuous": true,
			"executor": "@nx/web:file-server",
			"options": {
				"buildTarget": "frontend-angular2:build",
				"staticFilePath": "dist/apps/frontend-angular2/browser",
				"spa": true
			}
		}
	}
}
